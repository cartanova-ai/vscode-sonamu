{
  "name": "vscode-sonamu",
  "displayName": "Sonamu",
  "description": "Sonamu development support extension",
  "version": "0.0.1",
  "publisher": "sonamu-dev",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "sonamu.helloWorld",
        "title": "Sonamu: Hello World"
      },
      {
        "command": "sonamu.rescanNaite",
        "title": "Sonamu: Rescan Naite Keys"
      }
    ],
    "configuration": {
      "title": "Sonamu",
      "properties": {
        "sonamu.codeLens.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Naite 키 위에 CodeLens(정의/참조 카운트) 표시 여부"
        },
        "sonamu.decoration.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Naite 키에 텍스트 데코레이션 표시 여부"
        },
        "sonamu.decoration.style": {
          "type": "string",
          "default": "underline",
          "enum": ["underline", "none", "bold", "italic", "underline bold", "underline italic"],
          "description": "Naite 키 텍스트 데코레이션 스타일"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run compile",
    "compile": "node esbuild.js --production",
    "watch": "node esbuild.js --watch",
    "pretest": "pnpm run compile && pnpm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "package": "vsce package",
    "install-local": "code --install-extension vscode-sonamu-0.0.1.vsix"
  },
  "devDependencies": {
    "@types/node": "^20.x",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.0",
    "@vscode/vsce": "^3.7.1",
    "esbuild": "^0.27.0",
    "eslint": "^9.0.0",
    "typescript": "^5.6.0"
  },
  "packageManager": "pnpm@10.23.0"
}
