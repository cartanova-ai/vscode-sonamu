{
  "name": "sonamu",
  "displayName": "Sonamu",
  "description": "Sonamu development support extension",
  "icon": "images/sonamu.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/cartanova-ai/vscode-sonamu.git"
  },
  "version": "0.4.2",
  "publisher": "cartanova",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Testing",
    "Linters",
    "Visualization"
  ],
  "activationEvents": [
    "workspaceContains:**/sonamu.config.ts",
    "onWebviewPanel:naiteTraceViewer"
  ],
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "pnpm run build",
    "build": "tsc --noEmit && node esbuild.js --production",
    "dev": "node esbuild.js --watch",
    "pretest": "tsc -p ./",
    "test": "vscode-test",
    "package": "vsce package"
  },
  "devDependencies": {
    "naite-types": "workspace:*",
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.x",
    "@types/vscode": "^1.85.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.0",
    "@vscode/vsce": "^3.7.1",
    "esbuild": "^0.27.0",
    "mocha": "^11.7.5",
    "typescript": "^5.6.0"
  },
  "contributes": {
    "viewsContainers": {
      "panel": [
        {
          "id": "naitePanel",
          "title": "Naite",
          "icon": "resources/naite.svg"
        }
      ]
    },
    "commands": [
      {
        "command": "sonamu.helloWorld",
        "title": "Sonamu: Hello World"
      },
      {
        "command": "sonamu.rescanNaiteKeys",
        "title": "Sonamu: Rescan Naite Keys"
      },
      {
        "command": "sonamu.openTraceViewer",
        "title": "Sonamu: Open Naite Trace Viewer"
      }
    ],
    "configuration": {
      "title": "Sonamu",
      "properties": {
        "sonamu.naite.decoration.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Naite 키에 텍스트 데코레이션 표시 여부"
        },
        "sonamu.naite.decoration.style": {
          "type": "string",
          "default": "underline",
          "enum": [
            "underline",
            "none",
            "bold",
            "italic",
            "underline bold",
            "underline italic"
          ],
          "description": "Naite 키 텍스트 데코레이션 스타일"
        },
        "sonamu.naite.runtimeValue.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Naite.t() 호출 옆에 실행 시 값 표시 여부"
        },
        "sonamu.naite.runtimeValue.maxLength": {
          "type": "number",
          "default": 50,
          "description": "표시할 값의 최대 문자 길이"
        },
        "sonamu.naite.statusBarMessages.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Naite tracker 액션 발생 시 상태창에 메시지 표시 여부"
        }
      }
    }
  }
}
